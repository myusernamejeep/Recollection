doctype 5
html
  head
    title= title + ' | ' + appname
    link(rel="stylesheet", href="/fullcalendar-1.6.4/fullcalendar/fullcalendar.css")
    link(rel="stylesheet", media='print', href="/fullcalendar-1.6.4/fullcalendar/fullcalendar.print.css")
   	script(src='/fullcalendar-1.6.4/fullcalendar/lib/jquery.min.js', type="text/javascript")
   	script(src='/fullcalendar-1.6.4/fullcalendar/lib/jquery-ui.custom.min.js', type="text/javascript")
   	script(src='/fullcalendar-1.6.4/fullcalendar/fullcalendar.min.js', type="text/javascript")
   	script(src='/fullcalendar-1.6.4/fullcalendar/gcal.js', type="text/javascript") 
 
<script>

	$(document).ready(function() {
	
		$('#calendar').fullCalendar({
		
			header: {
				left: 'prev,next today',
				center: 'title',
				right: 'month,agendaWeek,agendaDay',
			},
			defaultView: 'agendaWeek',
	 
	
			events: $.fullCalendar.gcalFeed(
	            "https://www.google.com/calendar/feeds/13bunfjvn8llt9saatcacugupc%40group.calendar.google.com/private-55113a274aca592c121241f5ec002882/basic",
	            {
	                className: 'gcal-event',           // an option!
	                currentTimezone: 'Asia/Bangkok' // an option!
	            }
	        ),
			eventClick: function(event) {
				// opens events in a popup window
				window.open(event.url, 'gcalevent', 'width=700,height=600');
				return false;
			},
			
			loading: function(bool) {
				if (bool) {
					$('#loading').show();
				}else{
					$('#loading').hide();
				}
			}
			
		});
		
	});

</script>
<style>

	body {
		margin-top: 40px;
		text-align: center;
		font-size: 14px;
		font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
		}
		
	#loading {
		position: absolute;
		top: 5px;
		right: 5px;
		}

	#calendar {
		width: 900px;
		margin: 0 auto;
		}

</style>
</head>
<body>
<div id='loading' style='display:none'>loading...</div>
<div id='calendar'></div>
</body>
</html>
